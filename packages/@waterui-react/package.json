{
  "name": "@waterui/react",
  "version": "0.0.3",
  "description": "A UI components library for React",
  "author": {
    "name": "zerowong",
    "email": "wongzero@foxmail.com"
  },
  "license": "MIT",
  "bugs": "https://github.com/zerowong/water-ui/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/zerowong/water-ui.git",
    "directory": "packages/@waterui-react"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite",
    "build": "../../scripts/build.sh",
    "build:esm": "tsc -b ./tsconfig.esm.json",
    "build:cjs": "tsc -b ./tsconfig.cjs.json",
    "build:umd": "vite build",
    "build:css": "tailwindcss -c ./tailwind.config.js -i ./src/index.css -o ./dist/waterui.css -m"
  },
  "dependencies": {
    "@headlessui/react": "^1.4.2",
    "@heroicons/react": "^1.0.5",
    "classnames": "^2.3.1"
  },
  "peerDependencies": {
    "react": "^17",
    "react-dom": "^17"
  },
  "devDependencies": {
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "@vitejs/plugin-react": "^1.1.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.3.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "postcss": "^8.4.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tailwindcss": "^2.2.19",
    "vite": "^2.6.14"
  },
  "keywords": [
    "waterui",
    "react",
    "component library"
  ]
