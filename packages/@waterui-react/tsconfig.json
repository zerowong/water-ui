{
  "include": ["src", "playground"],
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "noEmit": true,
    "noEmitOnError": true,
    "removeComments": true,
    "jsx": "react",
    "baseUrl": "./",
    "declaration": true
  }
}
